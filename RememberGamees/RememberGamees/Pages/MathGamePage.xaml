<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RememberGamees.Pages.MathGamePage">
    <ContentPage.Content>
        <StackLayout>
            <Label Text="{Binding WriteNumber_Text}"/>
            <!--<Label Text="A + B ="
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->
            <Label Text="{Binding Multiple_Text}"/>
            <!--<Label Text="A - B ="
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->
            
            <!--<Label Text="A/B =?"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" />-->
            <Button Text="{Binding Result_Text}"
                    Command="{Binding FirstResult_Clicked}"/>
            <Button Text="{Binding Result2_Text}"
                    Command="{Binding SecondResult_Clicked}"/>
            <Button Text="{Binding Result3_Text}"
                    Command="{Binding ThirdResult_Clicked}"/>
            <Label Text="{Binding Score_Text}"/>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>