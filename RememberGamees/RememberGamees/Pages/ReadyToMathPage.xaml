<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RememberGamees.Pages.ReadyToMathPage">
    <ContentPage.Content>
        <Grid>
            <Frame Margin="0,20,0,0" Padding="0,0,0,0" CornerRadius="15" HasShadow="True" >
                <Label Text="Solve this mathematical problems"
                    HorizontalTextAlignment="Center"
                    FontSize="25"
                    TextColor="Black"/>
            </Frame>
            
            
            <Label 
                Text="Are you ready?"
                TextColor="Black"
                FontAttributes="Bold"
                VerticalOptions="CenterAndExpand" 
                HorizontalOptions="CenterAndExpand" 
                FontSize="Title"
                Grid.Row="2"
                />
                
            
            <Button 
                Text="READY!"
                Font="30"
                FontAttributes="Bold"
                BackgroundColor="Yellow"
                CornerRadius="15"
                Command="{Binding ReadyToPlay_Clicked}"
                VerticalOptions="Center"
                HorizontalOptions="CenterAndExpand"
                Grid.Row="4"
                WidthRequest="200"
                />
            
        </Grid>
    </ContentPage.Content>
</ContentPage>