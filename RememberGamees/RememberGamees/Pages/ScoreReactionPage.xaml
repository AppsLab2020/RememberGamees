<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="RememberGamees.Pages.ScoreReactionPage"
             NavigationPage.HasBackButton="False"
             Shell.NavBarIsVisible="False"
             BackgroundColor="White">
    <ContentPage.Content>
        <StackLayout>
            <Button Text="Click for go to the menu" Command="{Binding Button_Clicked}"  />
            <Entry Text="{Binding txtName}" ></Entry>
            <Entry Text="{Binding txtNumber}"></Entry>
            <Button Text="save to database" Command="{Binding Save}"></Button>
        </StackLayout>
    </ContentPage.Content>
</ContentPage>